# Smart Radio Environment Configuration
# Copy this file to .env and fill in your actual values

# Audiobookshelf Configuration
AUDIOBOOKSHELF_HOST=bigboy
AUDIOBOOKSHELF_PORT=13378
AUDIOBOOKSHELF_TOKEN=your_audiobookshelf_api_token_here

# MPD Configuration (optional - defaults will be used if not set)
MPD_DISCOVERY_TIMEOUT=3.0
MPD_CHECK_INTERVAL=30.0

# NFC Configuration (optional - defaults will be used if not set)
NFC_GPIO_SDA=7
NFC_GPIO_SCL=11
NFC_DEBOUNCE_INTERVAL=2.0

# Audio Configuration (optional - defaults will be used if not set)
DEFAULT_VOLUME=0.5
AUDIO_OUTPUT_DEVICE=default